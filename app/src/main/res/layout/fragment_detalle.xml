<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michus.cameramap.detalleFragment"
    tools:showIn="@layout/activity_detalle">


    <TextView
        android:text="aki va una foto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Tvdireccion"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:id="@+id/Ivimagen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />

    <Button
        android:text="map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Bmap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="410dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="410dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="455dp"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="294dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="294dp" />
</android.support.constraint.ConstraintLayout>
